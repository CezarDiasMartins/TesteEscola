<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TesteEscola.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-light p-0 d-flex">
            <div class="container justify-content-center">
                <a class="navbar-brand" href="">
                    <img src="~/logo.png" alt="" width="80" height="80">
                </a>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="bg-light mainDiv">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light d-flex justify-content-around align-items-center">
        <div>
            <a href="">
                <img src="~/logo.png" alt="" width="60" height="60">
            </a>
        </div>

        <div class="text-center">
            &copy; 2024<br>Controle Escolar
        </div>

        <div>
            <a href="">
                <img src="~/ministerioEducacao.png" alt="" width="200" height="50">
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>