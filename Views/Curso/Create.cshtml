@model CursoModel
@{
    ViewData["Title"] = "Criar Curso";
}

<form asp-controller="Curso" asp-action="Create" method="post">
    <div class="d-flex justify-content-evenly align-items-center">
        <div class="form-group w-25">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do curso">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-center align-items-center mt-3">
        <button type="submit" class="botao">Adicionar</button>
        <a class="botaoVoltar mx-1" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
    </div>
</form>